<Window
    x:Class="AddinManagerWpf.Windows.SelectAssemblyWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="Select AddIn"
    Width="400"
    Height="200"
    WindowStartupLocation="CenterOwner">
    <StackPanel Margin="10">
        <TextBlock Margin="0,0,0,10" Text="Select AddIn to switch assembly:" />
        <ComboBox
            Height="25"
            DisplayMemberPath="DisplayName"
            ItemsSource="{Binding AddInElements}"
            SelectedItem="{Binding SelectedAddinElement, Mode=TwoWay}" />
        <StackPanel
            Margin="0,20,0,0"
            HorizontalAlignment="Right"
            Orientation="Horizontal">
            <Button
                Width="75"
                Margin="0,0,10,0"
                Command="{Binding OkCommand}"
                CommandParameter="{Binding RelativeSource={RelativeSource AncestorType=Window}}"
                Content="OK" />
            <Button
                Width="75"
                Command="{Binding CancelCommand}"
                CommandParameter="{Binding RelativeSource={RelativeSource AncestorType=Window}}"
                Content="Cancel" />
        </StackPanel>
    </StackPanel>
</Window>
