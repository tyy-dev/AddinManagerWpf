<Window x:Class="AddinManagerWpf.Windows.SelectAssemblyWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Select AddIn" Height="200" Width="400"
        WindowStartupLocation="CenterOwner">
    <StackPanel Margin="10">
        <TextBlock Text="Select AddIn to switch assembly:" Margin="0,0,0,10"/>
        <ComboBox ItemsSource="{Binding AddInElements}"
                  DisplayMemberPath="DisplayName"
                  SelectedItem="{Binding SelectedAddinElement, Mode=TwoWay}"
                  Height="25"/>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,20,0,0">
            <Button Content="OK" Width="75" Margin="0,0,10,0"
                    Command="{Binding OkCommand}"/>
            <Button Content="Cancel" Width="75"
                    Command="{Binding CancelCommand}"
                    CommandParameter="{Binding RelativeSource={RelativeSource AncestorType=Window}}"/>
        </StackPanel>
    </StackPanel>
</Window>
